@using PagedList.Mvc;
@using PagedList;
@model  PagedList.PagedList<demo2.Models.Sach>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/_Layout_Admin.cshtml";
}

<div style="width: 100%; padding: 10px; margin-top: 60px; color: rebeccapurple; font-size: 20px;">
    <p>
        @Html.ActionLink("Thêm sách mới", "ThemMoi")
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
                crossorigin="anonymous"></script>
    </p>
</div>
<table class="table" style="border-radius: 10%;">
    <tr style="background-color:lightgreen">
        <th>Tên sách</th>
        <th>Ảnh bìa</th>
        <th>Số lượng</th>
        <th>Đơn giá</th>
        <th>NXB</th>
        <th>Chủ đề</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td width="15%">@Html.DisplayFor(modelItem => item.TenSach)</td>
            <td width="15%"><a href="@Url.Action("XemChiTiet", "Sach", new { @ms= item.MaSach })"><img src="~/HinhAnhSP/@item.AnhBia" width="120%" height="120%" /></a></td>
            <td width="7%">@Html.DisplayFor(modelItem => item.SoLuongTon)</td>
            <td width="12%">@string.Format("{0:0,0}", item.GiaBan)</td>
            <td width="12%">@Html.DisplayFor(modelItem => item.NhaXuatBan.TenNXB)</td>
            <td width="12%">@Html.DisplayFor(modelItem => item.ChuDe.TenChuDe)</td>
            <td>@Html.ActionLink("Chỉnh sửa", "ChinhSua", new { @masach = item.MaSach })</td> 
            <td>@Html.ActionLink("Chi tiết", "ChiTiet", new { @masach = item.MaSach }) </td>
            <td>@Html.ActionLink("Xóa", "Xoa", new { @masach = item.MaSach })</td>
        </tr>
    }
</table>
<div class="PageList">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>
<style>
    .PageList > ul li {
        display: flexbox;
        width: 100%;
     
    }
    .PageList
    {
        padding: 5px 5px 5px 5px;
    }
    .pagination-container {
        width: 200px;
        /*align-items: center;
            text-align: center;*/
        margin: 2px auto;
    }
    .pagination > li a {
        font-size: 20px;
        color: #333;
        padding: 5px 5px 5px 5px;
    }

    .pagination > .active {
        color: red;
    }
</style>



