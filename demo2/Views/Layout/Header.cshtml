<div id="header_banner">
    <img src="~/assets/img/index/FahasaSaleT3_W3_T823_Banner_Header_1263x60.jpg" class="img-fluid h-100 w-100">
</div>
<div id="header__bottom" class="row">
    @{
        var u = Session["TaiKhoan"] as demo2.Models.KhachHang;
    }
    <div class="container text-center">
        <div class="row">
            <div class="col">
                <div class="row">
                    <div class="col-8 col-sm-8 mx-5">
                        <a href="~/Home/Index"><img src="~/assets/img/index/logo.png" alt="logo" class="img-fluid w-75 h-100 "></a>
                    </div>
                </div>
            </div>
            <div class="col-6">
                    @using (Html.BeginForm("KetQuaTimKiem", "Search", FormMethod.Post))
                    {
                        <div class="row">
                            <form class="d-flex" role="search" style="height: 60px;">
                                @*<input class="form-control me-2" type="search" placeholder="Tìm kiếm" aria-label="Search" name="txtTimKiem">*@
                                @Html.TextBox("txtTimKiem", "", htmlAttributes: new { @class = "form-control me-2", @placeholder = "Tìm kiếm", @style = "width: 80%;" })
                                <button class="btn btn-danger" style="width:15%;" type="submit"><img src="~/assets/icon/search.svg"></button>
                            </form>
                        </div>
                    }
            </div>
            <div class="col mx-auto p-1" id="header__bottom__right">
                <nav class="navbar navbar-expand-lg">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <img src="~/assets/icon/bell.svg"> <br>
                                Thông báo
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/GioHang/GioHang">
                                <img src="~/assets/icon/shopping-cart.svg"> <br>
                                Giỏ hàng
                            </a>
                        </li>
                        @*<li class="nav-item acc">
                            <a class="nav-link" href="~/Home/DangNhap">
                                <img src="~/assets/icon/user.svg"> <br>
                                Tài khoản
                            </a>
                        </li>*@
                        @{
                            if (u != null)
                            {
                                <div class="col-sm-6 col-md-0">
                                    Xin chào : @u.HoTen
                                    &nbsp;
                                    @*@Html.ActionLink("ĐĂNG XUẤT", "DangXuat", "User", new { style = "color:red" })*@
                                    <a style="color:red" href="~/Home/DangXuat"> ĐĂNG XUẤT</a>
                                </div>
                            }
                            else
                            {
                                <li class="nav-item acc">
                                    <a class="nav-link" href="~/Home/DangNhap">
                                        <img src="~/assets/icon/user.svg"> <br>
                                        Tài khoản
                                    </a>
                                </li>
                            }
}
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

