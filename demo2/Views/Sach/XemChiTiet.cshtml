@model demo2.Models.Sach

@{
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Views/Layout/_Mainpage.cshtml";
}

<div class="container text-center">
    <div class="row">
        <div class="col">
            <img src="~/HinhAnhSP/@Model.AnhBia" />
        </div>
        <div class="col" >
            <p>Tên sách: @Html.DisplayFor(model => model.TenSach)</p> <br />
            <h6>Giá bán: @Html.DisplayFor(model => model.GiaBan)</h6> <br />
            <p>Mô tả: @Html.DisplayFor(model => model.MoTa) <br /></p>
            <p>Số lượng: @Html.DisplayFor(model => model.SoLuongTon)</p> <br />
            <p>Chủ đề: @Html.DisplayFor(model => model.ChuDe.TenChuDe)</p>
            <p>Nhà xuất bản: @Html.DisplayFor(model => model.NhaXuatBan.TenNXB)</p>
        </div>
    </div>
    <div class="row">
        <div class="btn_buy" style="margin-left: 10%; margin-bottom:10px;">
            <a href="@Url.Action("ThemGioHang", "GioHang", new { @ms = Model.MaSach, @strURl = Request.Url.ToString() })">
                <input type="submit" value="MUA HÀNG" class="btn btn-primary" /> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
            </a>
            <a href="@Url.Action("Index","Home")">
                <input type="submit" value="MUA TIẾP" class="btn btn-primary" />
            </a>
        </div>
    </div>
</div>
